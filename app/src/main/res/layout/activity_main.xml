<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_music"
    tools:context="com.fxc.ev.mediacenter.MainActivity">
    <include
        android:id="@+id/player"
        android:layout_width="match_parent"
        
android:layout_height="486px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/layout_bt_media_play_control"
        />

    <LinearLayout
        android:id="@+id/input_source_related"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fxc_input_source_bg"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/player"
        tools:ignore="MissingConstraints">
<!-- app:layout_constraintTop_toBottomOf="@id/mediaPlayer_csd_container"-->
        <View
            android:id="@+id/input_source_indicated"
            android:layout_width="108px"
            android:layout_height="6px"
            android:layout_marginLeft="486px"
            android:layout_marginTop="10px"
            android:background="#40FFFFFF" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_source_click_button_and_play_mode">
            <ImageView
                android:id="@+id/input_source_click_button"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:onClick="onInputSourceClick"
                android:background="@drawable/icon_collapse_normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_source_indicated" />

            <TextView
                
android:id="@+id/device_tips"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_marginRight="550px"
                android:layout_marginTop="47px"
                android:layout_marginLeft="15px"
                
android:textColor="#80FFFFFF"
                android:textSize="22px" />

            <ImageView
                android:id="@+id/random"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginTop="30px"
                android:background="@drawable/icon_shuffle_normal"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/play_mode"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="60px"
                android:layout_marginTop="30px"
                android:background="@drawable/icon_repeat_normal"
                android:onClick="onClick" />
        </LinearLayout>
        <ListView
            android:id="@+id/input_source_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:drawSelectorOnTop="true"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/input_source_click_button_and_play_mode" />
        
<include
            android:id="@+id/pair_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/device_list"
            android:visibility="invisible">

        </include>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:focusable="false"
            app:tabBackground="@drawable/tab_background"
            app:tabMode="fixed"
            app:tabTextColor="#ffffffff">
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_view"
            android:layout_width="wrap_content"
            android:background="#03000000"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
