<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/device_list_bg">
    <ListView
        android:id="@+id/input_source_list_popup"
        android:layout_width="480px"
        android:layout_height="wrap_content"
        android:maxHeight="720px"
        android:layout_margin="30px"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="true"
        android:scrollbars="vertical"
        android:scrollbarTrackVertical="@color/media_list_normal_bg"
        android:scrollbarThumbVertical="@drawable/scrollbra_thumb_bg"
        android:divider="@color/media_list_normal_bg"
      />
</LinearLayout>
