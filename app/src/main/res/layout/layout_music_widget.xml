<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:layout_marginEnd="-58px"
        android:layout_marginTop="-18px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="song"
            android:textColor="#80FFFFFF"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/widget_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/widget_open" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/skip_back"
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@drawable/icon_skip_back_normal" />

        <ImageView
            android:id="@+id/player_pause"
            android:layout_width="178px"
            android:layout_height="178px"
            android:layout_marginStart="29px"
            android:background="@drawable/img_album_widget"
            android:src="@drawable/icon_play_normal" />

        <ImageView
            android:id="@+id/player_play"
            android:layout_width="178px"
            android:layout_height="178px"
            android:layout_marginStart="29px"
            android:background="@drawable/img_album_widget"
            android:src="@drawable/icon_pause_normal"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/skip_fwd"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginStart="29px"
            android:src="@drawable/icon_skip_fwd_normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/artist_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:text="Artist-Album"
        android:textColor="#80FFFFFF"
        android:textSize="22px" />


</LinearLayout>
